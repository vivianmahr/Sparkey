<table>
<tr>
    <td>Post ID</td><td>Text</td><td>Vibes</td>
</tr>
    <% @final_results_list.each do |post, vibes_list| %>
    <tr>
        <td><%= post.id %></td>
        <td><%= post.text_content %></td>
        <td>
                <% vibes_list.each do |vibe| %>
                <%= vibe.vibe %>,
                <% end %>
        </td>
    </tr>
    <% end %>
</table>


<% provide(:title, "Roulette results") %>
